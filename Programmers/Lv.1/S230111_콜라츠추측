package Programmers.Lv1;

public class S230111_콜라츠추측 {

	public static void main(String[] args) {
		
		long num = 6;
		int answer = 0;
		while (num != 1){
            if (answer == 500){
                answer = -1;
                break;
            }
            num = num % 2 == 0 ? num / 2 : num * 3 + 1;
            answer++;
        }
		System.out.println(answer);
	}

}
