package Programmers.Lv1;

public class S230118_부족한금액계산하기 {

	public static void main(String[] args) {
		
		int price = 3;
		int money = 20;
		int count = 4;
		long answer = 0;
		
		for (int i = 1; i <= count; i++) {
			answer += (price * i);
		}
		answer = answer > money ? Math.abs(answer - money) : 0;
		System.out.println(answer);
	}

}
