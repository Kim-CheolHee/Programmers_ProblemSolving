class Solution {
    public int solution(int n) {
		int answer = 0;
		int a = n % 7;
		if (a != 0 && n > 7 && a < 7 && n <= 100) {
			answer = (n / 7) + 1;
		} else if (n < 7 && a != 0 && n <= 100) {
			answer = (n / 7) + 1;
		} else if (a == 0) {
			answer = n / 7;
		}
        return answer;
    }
}
