package Programmers;

public class S221028_옷가게할인받기 {

	public static void main(String[] args) {
		int price = 580000;
		int answer = 0;

		if (price >= 100000 && price < 300000) {
			answer = price * 95 / 100;
		} else if (price >= 300000 && price < 500000) {
			answer = price * 90 / 100;
		} else if (price >= 500000) {
			answer = price * 80 / 100;
		} else if (price < 100000) {
			answer = price;
		}
		System.out.println(answer);

	}

}
